<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dawn_pink">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTbMusicVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:background="@color/dawn_pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tbMusicVideo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_36sdp"
            android:layout_margin="@dimen/screen_margin"
            android:background="@drawable/tab_music_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabBackground="@drawable/tab_music_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="@dimen/zero_margin"
            app:tabMode="scrollable"
            app:tabPaddingEnd="@dimen/_35sdp"
            app:tabPaddingStart="@dimen/_35sdp"
            app:tabRippleColor="@null"
            app:tabSelectedTextColor="@color/white"
            app:tabTextAppearance="@style/TextAppearance.Orange.Bold.Headline5"
            app:tabTextColor="@color/spicy_pink" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpMusicVideo"
        android:layout_width="@dimen/zero_margin"
        android:layout_height="@dimen/zero_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clTbMusicVideo"/>

</androidx.constraintlayout.widget.ConstraintLayout>